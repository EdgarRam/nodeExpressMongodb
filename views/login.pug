extends layout/layout

block content
    form(id="", method="post", action="/users")
        div.form-group
            label( for = "email" ) Email
            input(
                type="text",
                placeholder="placeholder",
                name="email",
                id="email"
                class="form-control"
            )
        div.form-group
            label( for = "password" ) Password
            input(
                type="password",
                placeholder="placeholder",
                name="password",
                id="password"
                class="form-control"
            )
        div
            input(
                type="submit"
                value="iniciar Sesion"
                class="btn btn-info"
            )
